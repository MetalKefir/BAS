<UserControl x:Class="BAS.Views.EditBusy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:BAS.Views"
             xmlns:notification="using:Syncfusion.UI.Xaml.Controls.Notification"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="1000" d:DesignWidth="1000"
             mc:Ignorable="d">

<Grid>
        <notification:SfBusyIndicator Foreground="White" AnimationType="Pen" x:Uid="/BusyTitle/Edit" Grid.ColumnSpan="2" ViewboxHeight="100" ViewboxWidth="100">
        <notification:SfBusyIndicator.HeaderTemplate>

            <DataTemplate>

                <Grid Margin="50 0 0 18">

                    <TextBlock Text="{Binding}" FontSize="20" FontWeight="Bold" Foreground="White"/>

                </Grid>

            </DataTemplate>

        </notification:SfBusyIndicator.HeaderTemplate>
    </notification:SfBusyIndicator>
</Grid>

</UserControl>
